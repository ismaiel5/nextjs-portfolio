{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  // we need to include our jest.setup.ts in the include array to take it in ts configuration
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "test/index.test.tsx", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
